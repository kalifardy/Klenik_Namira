<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3e3d8"
    tools:context="com.example.keyalive.kliniknamira.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="7dp"
        app:cardBackgroundColor="#82baab">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            fontPath="fonts/JosefinSans-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:text="SELAMAT DATANG"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="bab1"
            android:layout_gravity="center" />

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"

     >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="bab1"
            app:cardElevation="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#ec8055">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kesehatan Ibu"
                android:textSize="20sp"
                fontPath="fonts/JosefinSans-SemiBold.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:onClick="bab1"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                 />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="bab2"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#da5f47">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kesehatan Anak"
                fontPath="fonts/JosefinSans-SemiBold.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="bab2"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp"
            android:onClick="program"
            app:cardBackgroundColor="#adc966">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Program"
                android:textSize="20sp"
                fontPath="fonts/JosefinSans-SemiBold.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:onClick="program"
                android:layout_gravity="center"
                android:textColor="#ffffff"

                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp"
            android:onClick="About"

            app:cardBackgroundColor="#8ca337">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tentang Aplikasi"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="About"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                fontPath="fonts/JosefinSans-SemiBold.ttf"
                tools:ignore="MissingPrefix"
                />

        </android.support.v7.widget.CardView>



    </LinearLayout>

</LinearLayout>
