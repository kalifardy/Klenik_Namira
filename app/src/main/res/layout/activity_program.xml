<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fac173"
    tools:context="com.example.keyalive.kliniknamira.program.Program"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="10dp"
        android:background="#66625f">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROGRAM"
        android:gravity="center"
        android:textColor="#fac173"
        android:layout_gravity="center_vertical"
        fontPath="fonts/JosefinSans-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:layout_weight="0"
        android:textSize="20sp"
        android:id="@+id/textView3" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="BabySpa"
        android:layout_marginTop="20dp"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#adc966">

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="BABY SPA"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:onClick="BabySpa"
        fontPath="fonts/JosefinSans-SemiBold.ttf"
        tools:ignore="MissingPrefix"
      />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="BabyMessage"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#adc966"
        tools:ignore="OnClick">
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="BABY MASSAGE"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        fontPath="fonts/JosefinSans-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:onClick="BabyMessage"
        android:id="@+id/textView5" />
</android.support.v7.widget.CardView>

</LinearLayout>
