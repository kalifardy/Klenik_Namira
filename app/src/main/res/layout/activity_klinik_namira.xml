<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_klinik_namira"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fe6f0f"

    tools:context="com.example.keyalive.kliniknamira.about.KlinikNamira"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="10dp"
        android:background="#66625f">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Klinik Namira"
            android:gravity="center"
            android:textColor="#fe6f0f"
            android:layout_gravity="center_vertical"
            fontPath="fonts/JosefinSans-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:layout_weight="0"
            android:textSize="30sp"
            android:id="@+id/textView3" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:layout_width="340dp"
        android:layout_gravity="center"
    android:layout_height="180dp"
app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    app:cardBackgroundColor="#ffffff">
    <TextView
        android:textSize="15dp"
        fontPath="fonts/JosefinSans-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:layout_margin="2dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:textColor="#000"
        android:gravity="center"
        android:text="@string/klinik_namira"/>


</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="25dp"
        fontPath="fonts/JosefinSans-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#ffffff">
        <TextView
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:textColor="#000"
            fontPath="fonts/JosefinSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:text="@string/alamat"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="186dp"
        android:layout_height="52dp"
        fontPath="fonts/JosefinSans-Regular.ttf"
        tools:ignore="MissingPrefix"
        app:cardElevation="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="maps"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_weight="0.04">
        <ImageView
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:src="@drawable/maps"/>

        <TextView
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textColor="#000"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            fontPath="fonts/JosefinSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:layout_gravity="center_vertical"
            android:text="Lihat Lokasi"
            android:id="@+id/textView2" />
    </android.support.v7.widget.CardView>

</LinearLayout>
