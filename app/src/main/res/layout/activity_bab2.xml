<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#91c4e9"
    android:layout_height="match_parent"
    tools:context="com.example.keyalive.kliniknamira.bab1.Bab1Activity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="7dp"
        app:cardBackgroundColor="#616660">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="KESEHATAN ANAK"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#91c4e9"
            fontPath="fonts/JosefinSans-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/activity_bab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#91c4e9">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"

            android:onClick="satu"
            app:cardBackgroundColor="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelayanan Debay Yang Baru Lahir Oleh Dokter / Bidan / Perawat"
                android:textSize="20sp"
                fontPath="fonts/JosefinSans-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#030303"

                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            android:onClick="dua"
            app:cardBackgroundColor="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bun Jangan Lupa Beri Debay ASI Terbaik"
                android:textSize="20sp"
                android:gravity="center"
                fontPath="fonts/JosefinSans-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:layout_gravity="center"
                android:textColor="#030303"

                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            android:onClick="tiga"
            app:cardBackgroundColor="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASI Itu Penting Loh Bun, Nih Beberapa Manfaat ASI"
                android:textSize="20sp"
                android:gravity="center"
                fontPath="fonts/JosefinSans-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:layout_gravity="center"
                android:textColor="#030303"

                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            android:onClick="empat"
            android:layout_weight="1"
            app:cardBackgroundColor="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Perhatikan Bun, Cara Menjaga Debay Tetap Hangat"
                fontPath="fonts/JosefinSans-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#030303"

                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            android:onClick="lima"
            android:layout_weight="1"
            app:cardBackgroundColor="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Begini Loh Bun, Perawatan Tali Pusar"
                android:textSize="20sp"
                fontPath="fonts/JosefinSans-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#030303"
                android:id="@+id/textView4" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>