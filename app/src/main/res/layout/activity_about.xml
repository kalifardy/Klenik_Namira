<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#adc966"
    tools:context="com.example.keyalive.kliniknamira.program.Program"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0"
        app:cardElevation="10dp"
        android:background="#66625f">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:gravity="center"
            android:textColor="#adc966"
            android:layout_gravity="center_vertical"
            fontPath="fonts/JosefinSans-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:textSize="25sp"
            android:id="@+id/textView3" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="TentangKlinik"
        android:layout_marginTop="20dp"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#91c4e9"
        tools:ignore="OnClick">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
            android:text="Klinik Namira"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            fontPath="fonts/JosefinSans-Regular.ttf"
            tools:ignore="MissingPrefix"            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="Pengembang"
        app:cardElevation="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#91c4e9"
        tools:ignore="OnClick">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:text="Pengembang"
            fontPath="fonts/JosefinSans-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/textView5" />
    </android.support.v7.widget.CardView>

</LinearLayout>
